@model IEnumerable<MyClinic_DB.Models.Doctor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DOCTORS</h2>

<p>
    @Html.ActionLink("Create New", "Create", null,new {@class="btn btn-primary"})
</p>
<div>
    @using(Html.BeginForm("Index","Doctors",FormMethod.Get))
            {
                <table>
                    <tr>
                        <td>
                            <span> <b>Search By:</b> </span>
                            @Html.RadioButton("searchBy", "DoctorName", true)
                            <text> Doctor Name</text>
                            @Html.RadioButton("searchBy", "Gender")
                            <text> Gender</text>
                           


                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.TextBox("searchValue", null, new {Class="form-control",placeholder="Enter Doctor Name or Gender "})
                        </td>
                        <td>
                            <input type="submit" value="Search" class="btn btn-success" />
                        </td>
                    </tr>
                </table>
            }
    <br /><br />
</div>

<table class="table table-striped table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DoctorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birth_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Charge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MonthlySalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qualification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Experience)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birth_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Charge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MonthlySalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qualification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Experience)
        </td>
        <td>
            
            <a href="@Url.Action("Edit", new {id = item.DoctorId})" class="btn btn-success"><i class="fa fa-edit"></i></a> |
            <a href="@Url.Action("Details", new {id = item.DoctorId})" class="btn btn-primary"><i class="fa fa-info"></i></a> |
            <a href="@Url.Action("Delete", new {id = item.DoctorId})" class="btn btn-danger"><i class="fa fa-trash"></i></a>
        </td>
    </tr>
}

</table>
