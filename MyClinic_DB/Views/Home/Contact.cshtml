@{
    ViewBag.Title = "Contact Us";
}
<body>

    <h2 id="title">@ViewBag.Title</h2>
    <h3>@ViewBag.Message</h3>
    <div class="jumbotron">

        <div class="login-box shadow rounded p-5">
            <h3>ADDRESS : </h3>

            <address>
                Phase 3,Hinjawadi Rajiv Gandhi Infotech Park<br />
                Pune, Maharashtra ,411057<br />
                <abbr title="Phone ">Phone: 999999999</abbr>

            </address>
            <h3>Want to Book an Appointment :</h3>
        
            <input type="button" class="btn btn-primary" value="Appointment" onclick="location.href='@Url.Action("Create", "Appointments")'" />
