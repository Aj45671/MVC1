                    align-items: center;
                    display: flex;
                    justify-content: left;
                }

                .login-box {
                    width: 60%;
                    background-color: lightgoldenrodyellow;
                    box-shadow: 10px 20px gold;
                }

                h3 {
                    font-weight: bold;
                    color: red;
                }

                abbr {
                    font-size: 20px;
                    color: forestgreen;
                    font-weight: bold;
                }

                .c1 {
                    border-style: solid;
                    border-width: 4px;
                    border-color: lightseagreen;
                    background-color: gold;
                    width: fit-content;
                    float: left;
                    font-weight: bold;
                    color: ghostwhite;
                }

                .c2 {
                    float: left;
                }

                body {
                    background-image: url('/Content/image-113.png');
                }

