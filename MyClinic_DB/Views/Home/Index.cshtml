                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card">
                        <img class="card-img-top" src="~/Content/pexels7.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Appointments</h5>
                            <p> For creating ,editing and deleting appointments details.</p>
                            @Html.ActionLink("Go To Appointments", "Create", "Appointments", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
            
                

