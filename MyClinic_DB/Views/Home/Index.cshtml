        <div class="container">
            <div class="row">
                <div class="col-4">
                    <div class="card">
                        <img class="card-img-top" src="~/Content/pexels6.jpg" alt="Card image cap" height="225">
                        <div class="card-body">
                            <h5 class="card-title">Doctor</h5>
                            <p> For creating ,editing and deleting doctor details.</p>
                            @Html.ActionLink("Go To Doctor", "Create", "Doctors", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card">
                        <img class="card-img-top" src="~/Content/pexels2.jpg" alt="Card image cap"  height="225">
